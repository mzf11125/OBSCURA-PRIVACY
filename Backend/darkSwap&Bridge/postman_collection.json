{
  "info": {
    "name": "darkSwap & Bridge API",
    "description": "API collection for darkSwap and Bridge operations",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "apiKey",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/health",
              "host": ["{{baseUrl}}"],
              "path": ["api", "health"]
            }
          }
        }
      ]
    },
    {
      "name": "Bridge",
      "item": [
        {
          "name": "Get Bridge Quote",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "X-API-Key",
                "value": "{{apiKey}}",
                "disabled": true
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"srcChainId\": 1,\n  \"srcToken\": \"0xA0b86991c6218b36c1d19D4a2e9Eb0cE3606eB48\",\n  \"srcAmount\": \"1000000\",\n  \"dstChainId\": 43114,\n  \"dstToken\": \"0xB97EF9Ef8734C71904D8002F8b6Bc66Dd9c48a6E\",\n  \"userAddress\": \"0x742d35Cc6634C0532925a3b844Bc9e7595f0bEb\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/bridge/quote",
              "host": ["{{baseUrl}}"],
              "path": ["api", "bridge", "quote"]
            }
          }
        },
        {
          "name": "Execute Bridge",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"srcChainId\": 1,\n  \"srcToken\": \"0xA0b86991c6218b36c1d19D4a2e9Eb0cE3606eB48\",\n  \"srcAmount\": \"1000000\",\n  \"dstChainId\": 43114,\n  \"dstToken\": \"0xB97EF9Ef8734C71904D8002F8b6Bc66Dd9c48a6E\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/bridge/execute",
              "host": ["{{baseUrl}}"],
              "path": ["api", "bridge", "execute"]
            }
          }
        },
        {
          "name": "Check Bridge Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/bridge/status/:requestId?provider=relay",
              "host": ["{{baseUrl}}"],
              "path": ["api", "bridge", "status", ":requestId"],
              "query": [
                {
                  "key": "provider",
                  "value": "relay"
                }
              ],
              "variable": [
                {
                  "key": "requestId",
                  "value": "your-request-id"
                }
              ]
            }
          }
        },
        {
          "name": "Solve Optimal USDC",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"srcChainId\": 1,\n  \"srcToken\": \"0xA0b86991c6218b36c1d19D4a2e9Eb0cE3606eB48\",\n  \"srcAmount\": \"1000000\",\n  \"userAddress\": \"0x742d35Cc6634C0532925a3b844Bc9e7595f0bEb\",\n  \"maxImpactPercent\": 3.0\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/bridge/solve-usdc",
              "host": ["{{baseUrl}}"],
              "path": ["api", "bridge", "solve-usdc"]
            }
          }
        }
      ]
    },
    {
      "name": "Silent Swap",
      "item": [
        {
          "name": "Get Swap Quote",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"recipientAddress\": \"0x742d35Cc6634C0532925a3b844Bc9e7595f0bEb\",\n  \"tokenAddress\": \"0xA0b86991c6218b36c1d19D4a2e9Eb0cE3606eB48\",\n  \"tokenAmount\": \"10\",\n  \"tokenDecimals\": 6,\n  \"chainId\": 1\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/swap/quote",
              "host": ["{{baseUrl}}"],
              "path": ["api", "swap", "quote"]
            }
          }
        },
        {
          "name": "Execute Silent Swap",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"recipientAddress\": \"0x742d35Cc6634C0532925a3b844Bc9e7595f0bEb\",\n  \"tokenAddress\": \"0xA0b86991c6218b36c1d19D4a2e9Eb0cE3606eB48\",\n  \"tokenAmount\": \"10\",\n  \"tokenDecimals\": 6,\n  \"chainId\": 1\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/swap/execute",
              "host": ["{{baseUrl}}"],
              "path": ["api", "swap", "execute"]
            }
          }
        }
      ]
    }
  ]
}

{
  "name": "darkpool-backend",
  "version": "1.0.0",
  "description": "Production-ready dark pool trading backend using Arcium MPC for private order matching",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "node --watch src/server.js",
    "build": "arcium build",
    "test": "arcium test",
    "deploy:devnet": "arcium deploy --cluster devnet",
    "deploy:mainnet": "arcium deploy --cluster mainnet",
    "init:comp-defs": "node scripts/initComputationDefs.js"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.32.1",
    "@solana/web3.js": "^1.87.6",
    "@solana/spl-token": "^0.4.1",
    "@noble/curves": "^1.3.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bignumber.js": "^9.1.2",
    "ws": "^8.16.0",
    "redis": "^4.6.12",
    "uuid": "^9.0.1",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
